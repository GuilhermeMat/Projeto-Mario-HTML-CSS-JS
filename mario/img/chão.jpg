*{
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}
header{
    width: 80%;
    margin: auto;
    padding: 25px;
}
body{
    background-image: url(../img/fundo.webp);
}
h1{
    width: 100%;
    margin: auto;
    padding: 5px;
    text-align: center;
    color: #ffffff;
    border: solid 1px black;
    border-radius: 8px;
    background-color: #5D94FB;
    background-size: cover;
}
.game{
    width: 80%;
    height: 500px;
    border: 1px solid black;
    margin: auto auto;
    position: relative;
    overflow: hidden;
    background-color: #5D94FB;
}
.mario{
    position: absolute;
    bottom: 60px;
    width: 160px;
    animation: pulomario 500ms ease-out;
}
.tubo{
    position: absolute;
    bottom: 60px;
    width: 80px;
    animation: tubomario 4s infinite linear;
}
.nuvem{
    position: absolute;
    top: 65px;
    width: 80px;
    animation: nuvemvoadora 8s infinite linear;
}
.chao{
    width: 100%;
    height: 60px;
    position: absolute;
    bottom: 0px;
}
/* função para animar a nuvem */
@keyframes nuvemvoadora{
    from{
        right: -120px;
    }
    to{
        right: 100%;
    }
}
/* função para animar o tubo */
@keyframes tubomario{
    from{
        right: -80px;
    }
    to{
        right: 100%;
    }
}
/* função para animar o personagem */
@keyframes pulomario{
    0%{
        bottom: 60px;
    }
    40%{
        bottom: 200px;
    }
    50%{
        bottom: 200px;
    }
    60%{
        bottom: 200px;
    }
    100%{
        bottom: 60px;
    }
}
